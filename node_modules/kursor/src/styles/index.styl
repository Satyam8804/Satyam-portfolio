@import './mixins'

.notCursor
  cursor: none
  *
    cursor: none

#kursorWrapper
  position fixed
  z-index 99
  overflow hidden
  pointer-events none
  top 0
  left 0
  width 100%
  height 100%
  overflow hidden

  // --k-color: 0,0,0
div[class*='kursor']
  position fixed
  pointer-events: none
  transform: translate(-50%, -50%)
  z-index 10000
  &.kursor
    &--hidden
      opacity 0
      width: 0px
      height 0px
    &--1
      left 0px
      top 0px
      width: 25px
      height 25px
      border-radius: 50%
      border 2px solid k-color(color)
      transition: all .2s ease, top .18s ease-out, left .18s ease-out
      + .kursorChild
        display: block
        width: 4px
        height 4px
        background: k-color(color)
        border-radius: 50%
        transition: all .2s ease, top .0s ease-out, left .0s ease-out
      &.--hover
        width: 40px
        height 40px
        border 2px solid k-color(color, 0)
        background: k-color(color, .1)
        + .kursorChild
          background: k-color(color, .3)
      &.kursor--down
        width: 20px
        height 20px
        + .kursorChild
          &:after
            width: 40px !important
            height 40px !important
            opacity 0
            border 1px solid
            border-radius: 50%
            border-color: k-color(color)
            transition: all .4s ease
    &--2
      left 0px
      top 0px
      width: 20px
      height 20px
      border-radius: 50%
      background: k-color(color)
      transition: all .2s ease, top .1s ease-out, left .1s ease-out
      + .kursorChild
        display: block
        width: 4px
        height 4px
        background: k-color(color)
        border-radius: 50%
        transition: all .2s ease, top .2s ease-out, left .2s ease-out
      &.--hover
        width: 40px
        height 40px
        background: k-color(color, .1)
        + .kursorChild
          background: k-color(color, .3)
      &.kursor--down
        width: 10px
        height 10px
        + .kursorChild
          &:after
            width: 40px !important
            height 40px !important
            opacity 0
            border 1px solid
            border-radius: 50%
            border-color: k-color(color)
            transition: all .4s ease

    &--3
      left 0px
      top 0px
      width: 20px
      height 20px
      border 1px solid k-color(color)
      transition: all .2s ease, top .05s ease-out, left .05s ease-out
      + .kursorChild
        display: block
        width: 4px
        height 4px
        background: k-color(color)
        transition: all .2s ease, top .2s ease-out, left .2s ease-out
      &.--hover
        width: 40px
        height 40px
        background: k-color(color, .1)
        border 1px solid k-color(color, 0)
        + .kursorChild
          background: k-color(color, .3)
      &.kursor--down
        width: 5px
        height 5px
        border 1px solid k-color(color, 0)
        + .kursorChild
          width: 10px
          height 10px
          &:after
            width: 40px !important
            height 40px !important
            opacity 0
            border 1px solid
            border-color: k-color(color)
            transition: all .4s ease

    &--4
      left 0px
      top 0px
      width: 50px
      height 50px
      border 1px solid k-color(color, .3)
      border-radius: 50%
      transition: all .2s ease, top .2s ease-out, left .2s ease-out
      + .kursorChild
        display: block
        width: 6px
        height 6px
        background: k-color(color)
        border-radius: 50%
        transition: all .2s ease, top .03s ease-out, left .03s ease-out
      &.--hover
        width: 30px
        height 30px
        background: k-color(color, .1)
        border 3px solid k-color(color, 0)
        + .kursorChild
          width: 25px
          height 25px
          background: k-color(color, .1)
      &.kursor--down
        width: 5px
        height 5px
        + .kursorChild
          width: 10px
          height 10px
          &:after
            width: 40px !important
            height 40px !important
            opacity 0
            border-radius: 50%
            border 1px solid
            border-color: k-color(color)
            transition: all .4s ease

    &--5
      left 0px
      top 0px
      width: 10px
      height 10px
      border 1px solid k-color(color, .5)
      border-radius: 50%
      transition: all .2s ease, top .2s ease-out, left .2s ease-out
      &.--hover
        width: 26px
        height 26px
        background: k-color(color, .1)
        border 3px solid k-color(color, 0)
      &.kursor--down
        width: 15px
        height 15px


div[class*='kursorChild']
  position fixed
  pointer-events: none
  transform: translate(-50%, -50%)
  display: none
  overflow hidden
  &.kursorChild
    &[class*='--hidden']
      opacity 0
      width: 0px
      height 0px

    &:after
      content: ''
      pointer-events: none
      width: 0px
      height 0px
      position absolute
      left 50%
      top 50%

      opacity 1
      border 0px solid k-color(color, .5)
      transform: translate(-50%, -50%)

.kursor--absolute
  position absolute !important
  z-index 2000


// responsive
@media screen and (max-width: 768px)
  .notCursor *
    cursor auto
  div[class*='kursor']
    display: none !important
  div[class*='kursorChild']
    display: none !important
@media screen and (max-width: 812px) and (max-height: 430px) and (orientation: landscape)
  div[class*='kursor']
    display: none !important
  div[class*='kursorChild']
    display: none !important
  .notCursor *
    cursor auto
